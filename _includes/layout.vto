<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{{ title }}</title>

        <meta name="description" content="{{ description }}" />
        <meta property="og:title" content="{{ title }}" />
        <meta property="og:description" content="{{ description }}" />
        <meta property="og:type" content="profile" />

        <link
            rel="icon"
            href="https://site-ethmarks.vercel.app/common/ethmarks.ico"
            type="image/x-icon"
        />
        <link
            rel="stylesheet"
            href="https://site-ethmarks.vercel.app/common/ethmarks-rich.css"
        />

        {{ for stylesheetURL of stylesheets }}
            <link rel="stylesheet" href="{{ stylesheetURL }}" />
        {{ /for }}

        {{ for scriptURL of scripts }}
            <script src="{{ scriptURL }}" defer ></script>
        {{ /for }}

        <script
            src="https://site-ethmarks.vercel.app/common/ethmarks.wc.js"
            defer
        ></script>
        <script>
          window.va = window.va || function () { (window.vaq = window.vaq || []).push(arguments); };
        </script>
        <script defer src="/_vercel/insights/script.js"></script>
    </head>
    <body>
        <eth-header active="posts">
            {{ remote.header |> safe }}
        </eth-header>

        <main>{{ content }}</main>

        <eth-footer source="https://github.com/ethmarks/posts">
            {{ remote.footer |> safe }}
        </eth-footer>
    </body>
</html>
